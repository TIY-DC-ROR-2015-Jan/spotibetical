<h1>Suggested Songs</h1>
<form style='float: left; padding: 5px;' action="/display" method="GET">
	<input name="sort" value="alpha" type="hidden">
	<button class="btn btn-sm btn-primary">Sort by artist name</button>
</form>
<form style='float: left; padding: 5px;' action="/display" method="GET">
	<input type="hidden">
	<button class="btn btn-sm btn-success">Sort by date suggested</button>
</form>
<table class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
		<th>Artist</th>
		<th>Title</th>
		<th>Preview</th>
		<th>Current Votes</th>
		<% if current_user %>
			<th>Vote</th>
			<th>Veto</th>
		<% end %>
		</tr>
	</thead>
	<tbody>
		<% @songs.each do |song| %>
			<tr>
				<td><%= song["artist"]%></td>
				<td><%= song["title"]%></td>
				<td><%= song["spotify_link"]%></td>
				<td><% #votes["count"]%></td>
				<% if current_user %>
					<td><% #song["to_vote"]%></td>
					<td><% #veto["button"]%></td>
				<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
